@require '../assets/stylus/variables.styl'

.signup__separator
  position relative

  &::before, &::after
    content ''
    height 2px
    width 150px
    position absolute
    background lighten(primary-text-color, 70%)
    top 50%

  &::before
    transform translate(-110%, -50%)

  &::after
    transform translate(10%, -50%)

.waisygh__facebook
  background #3b5998!important

.waisygh__twitter
  background #00aced!important

.waisygh__google
  background #dd4b39!important
